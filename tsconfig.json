{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "outDir": "./lib",
    "types": ["node", "jest"],
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts", "tests/**/*.tsx", "tests/**/*.ts", "types.d.ts"],
  "exclude": ["node_modules"]
}
